{
  "manifest_version": 2,
  "author": "Isaac Khor",
  "name": "Better FF Reader",
  "version": "0.1.0",
  "description": "A better version of the built-in reader mode",
  "homepage_url": "https://github.com/ClarenceClark/better-ff-reader",

  "icons": { "48": "icons/icon.svg" },
  "permissions": ["activeTab"],

  "applications": {
    "gecko": {
      "id": "better-ff-reader@isaackhor.com",
      "strict_min_version": "55.0"
    }
  },

  "page_action": {
    "browser_style": false,
    "default_icon": "icons/icon.svg",
    "default_title": "Toggle Reader Mode (C-S-1)"
  },

  "browser_action": {
    "default_title": "Toggle reader mode",
    "default_icon": "icons/icon.svg"
  },

  "commands": {
    "toggle-reader-mode": {
      "suggested_key": {
        "default": "MacCtrl+Shift+1"
      },
      "description": "Toggle Reader Mode"
    }
  },

  "background": {
    "scripts": ["scripts/background.js"]
  },

  "web_accessible_resources": [
    "libs/*",
    "css/*"
  ]
}